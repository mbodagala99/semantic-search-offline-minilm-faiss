# Healthcare Semantic Search Configuration
# This file contains all configurable parameters for the healthcare search system

[EMBEDDING_MODEL]
# Primary embedding model for semantic search
primary_model = dmis-lab/biobert-base-cased-v1.1
# Alternative models for comparison testing
alternative_models = bert-base-uncased,all-MiniLM-L6-v2,bert-large-uncased,emilyalsentzer/Bio_ClinicalBERT
# Model dimensions (auto-detected, but can be overridden)
model_dimensions = 768
# Enable model caching
enable_caching = true
# Cache directory
cache_directory = embeddings_cache

[CONFIDENCE_THRESHOLDS]
# Minimum confidence threshold for high-confidence matches
minimum_threshold = 0.8
# Default threshold for routing decisions (increased to reduce false positives)
default_threshold = 0.8
# Thresholds for testing and comparison
test_thresholds = 0.6,0.7,0.8,0.9,1.0
# Enable adaptive threshold adjustment
adaptive_thresholds = true
# Domain-specific threshold for healthcare queries
healthcare_domain_threshold = 0.75
# Non-healthcare rejection threshold
non_healthcare_threshold = 0.3

[SEARCH_OPTIMIZATION]
# Enable vector normalization
normalize_vectors = true
# Enable text preprocessing
preprocess_text = true
# Enable query expansion
query_expansion = true
# Maximum search results
max_results = 10
# Enable similarity caching
enable_similarity_cache = true
# Enable domain filtering
enable_domain_filtering = true
# Enable healthcare keyword detection
enable_healthcare_keywords = true
# Enable non-healthcare rejection
enable_non_healthcare_rejection = true

[INDEX_CONFIGURATION]
# FAISS index type (IndexFlatIP, IndexIVFFlat, IndexPQ)
index_type = IndexFlatIP
# Index directory
index_directory = indexes
# Enable incremental updates
incremental_updates = true
# Batch size for updates
batch_size = 100

[PERFORMANCE]
# Enable parallel processing
parallel_processing = true
# Number of worker threads
worker_threads = 4
# Enable memory optimization
memory_optimization = true
# Cache size limit (MB)
cache_size_limit = 1000

[LOGGING]
# Log level (DEBUG, INFO, WARNING, ERROR)
log_level = INFO
# Enable performance logging
performance_logging = true
# Log file path
log_file = healthcare_search.log
